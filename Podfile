    pod 'TOCropViewController'
    pod 'PKHUD'
    pod 'SDWebImage', '~> 4.0'
    
    target 'GalleryImageUploadTests' do
        inherit! :search_paths
        # Pods for testing
        pod 'Firebase'
    end
    
    target 'GalleryImageUploadUITests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
